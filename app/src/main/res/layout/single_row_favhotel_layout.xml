<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="10dp"
    >



    <RelativeLayout
        android:id="@+id/contetlayoutt"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="5dp"
        >


        <ImageView
            android:id="@+id/imgFavHotelImage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:id="@+id/txtFavHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgFavHotelImage"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/imgheart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_a"
            android:layout_toRightOf="@id/imgFavHotelImage"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="240dp"/>

        <TextView
            android:id="@+id/txtFavHotelRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textColor="#ffca28"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgFavHotelImage"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="80dp"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/rupee"
            android:layout_toRightOf="@id/imgFavHotelImage"
            android:layout_below="@id/txtFavHotelName"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txtFavHotelPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="299"
            android:textSize="15sp"
            android:layout_toRightOf="@id/imgFavHotelImage"
            android:layout_below="@id/txtFavHotelName"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/txtPerPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/person"
            android:textSize="15sp"
            android:layout_toRightOf="@id/imgFavHotelImage"
            android:layout_below="@id/txtFavHotelName"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="60dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>